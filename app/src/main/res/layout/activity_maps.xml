<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.co.francisco.co_app.gui.MapsActivity" >

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map">
    </fragment>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/save_parcours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        app:fab_colorNormal="@color/colorAppGrey"
        app:fab_colorPressed="@color/colorAppRed"
        android:src="@drawable/ic_save"
        />
    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/quite_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_above="@+id/save_parcours"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        app:fab_colorNormal="@color/colorAppGrey"
        app:fab_colorPressed="@color/colorAppRed"
        android:src="@drawable/ic_back"
        />
    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="Distance"
        android:textSize="20dp"
        android:textColor="@color/colorAppblack"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="30dp"
        />

</RelativeLayout>